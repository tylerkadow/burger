<h1>Eat da Burger!</h1>

<img class="center" src="../assets/img/burger.png" alt="Burger" height="200" width="200">

<div class="container">
  <div class="row">
    <div class="col-md-6">
<h2>Burgers to EAT</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
    </div>

    <div class ="col-xs-2">
    </div>

    <div class="col-md-4">
<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block2 devoured=false}}
    {{/if}}
  {{/each}}
</ul>
    </div>
  </div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <button class="btn btn-primary" type="submit">Add Burger</button>
</form>
</div>